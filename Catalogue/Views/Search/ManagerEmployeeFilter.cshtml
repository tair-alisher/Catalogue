
@model PagedList.IPagedList<Catalogue.Models.Tables.Employee>
@using PagedList.Mvc;
<div class="row">
    <div class="col-md-12">
        <div>
            <div id="result" class="content">
                @if (Model.Count <= 0)
                {
                    <p>Нет результатов</p>
                    <table id="list-table"></table>

                }
                else
                {
                    <table class="table table-hover table-responsive table-condensed" id="list-table">
                        <caption>Список сотрудников</caption>
                        <thead>
                            <tr>
                                <th>ФИО</th>
                                <th>Отдел</th>
                                <th>Должность</th>
                                <th>Кабинет</th>
                                <th>Действие</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (Catalogue.Models.Tables.Employee item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(model => item.EmployeeFullName)</td>
                                    <td>@Html.DisplayFor(model => item.Department.DepartmentName)</td>
                                    <td>@Html.DisplayFor(model => item.Position.PositionName)</td>
                                    <td>@Html.DisplayFor(model => item.EmployeeRoom)</td>
                                    <td>
                                        <div class="btn-group">
                                            <a class="btn btn-default" name="detailsButton" id="detailsButton" href="@Url.Action("EmployeeDetails","Search", new {id = item.EmployeeId})"><i class="fa fa-eye" aria-hidden="true" title="Просмотреть" data-toggle="tooltip" data-placement="top"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    <div id="contentPager">
                        @Html.PagedListPager(
                        Model,
                        page => Url.Action("EmployeeFilter", new { page }))

                        Старница @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) из @Model.PageCount
                    </div>
                }
            </div>
        </div>
    </div>
</div>
